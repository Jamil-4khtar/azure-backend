# ==========  Database Configuration ==========
# PostgreSQL database credentials
DB_USER=postgres
DB_PASSWORD=your_secure_password_here_min_8_chars
DB_NAME=your_database_name

# Host access (when backend runs outside Docker)
DB_HOST=localhost
DB_PORT_HOST=5435
DATABASE_URL_LOCAL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT_HOST}/${DB_NAME}?schema=public

# Docker access (when backend runs inside Docker)
DB_HOST_DOCKER=postgres
DB_PORT_DOCKER=5432
DATABASE_URL_DOCKER=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST_DOCKER}:${DB_PORT_DOCKER}/${DB_NAME}?schema=public

# Toggle Database here (use either DATABASE_URL_LOCAL or DATABASE_URL_DOCKER)
DATABASE_URL=${DATABASE_URL_LOCAL}
DB_PORT=${DB_PORT_HOST}

# ==========  Server Configuration ==========
PORT=3000
NODE_ENV=development

# ==========  Admin Seed Data ==========
# Initial admin user credentials for seeding
SEED_ADMIN_EMAIL=admin@yourdomain.com
SEED_ADMIN_PASSWORD=your_admin_password_min_8_chars

# ==========  JWT Configuration ==========
# SECURITY: Generate a secure JWT secret (minimum 32 characters)
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Or online: https://generate-secret.vercel.app/32
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_required
JWT_EXPIRES_IN=7d

# ==========  Frontend URLs (CORS) ==========
# URLs of your frontend applications
DASHBOARD_URL=http://localhost:3001
WEBSITE_URL=http://localhost:3002

# ==========  Email SMTP Settings ==========
# SMTP server configuration for sending emails
SMTP_HOST=localhost
SMTP_PORT=2526
SMTP_SECURE=false
MAIL_FROM=Your App Name <noreply@yourdomain.com>

# ==========  Additional Configuration ==========
# Add any additional environment variables your application needs
# REDIS_URL=redis://localhost:6379
# API_KEY=your_api_key_here
# LOG_LEVEL=info
