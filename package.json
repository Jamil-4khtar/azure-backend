{
  "name": "azure-backend",
  "version": "1.0.0",
  "description": "Azure Backend API Server",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "dotenv -e .env.development -- nodemon src/server.js",
    "dev:debug": "dotenv -e .env.development -- nodemon --inspect src/server.js",
    "start:prod": "dotenv -e .env.production -- node src/server.js",
    "db:generate": "prisma generate",
    "db:push": "dotenv -e .env.development -- prisma db push",
    "db:migrate": "dotenv -e .env.development -- prisma migrate dev",
    "db:seed": "dotenv -e .env.development -- node prisma/seed.js",
    "db:studio": "prisma studio",
    "db:format": "prisma format",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "docker:restart": "docker-compose restart",
    "lint": "echo 'Linting not configured yet'",
    "lint:fix": "echo 'Linting not configured yet'",
    "format": "echo 'Formatting not configured yet'",
    "test": "echo 'Tests not configured yet'",
    "test:watch": "echo 'Tests not configured yet'",
    "test:coverage": "echo 'Tests not configured yet'",
    "build": "echo 'Build process for production'",
    "validate": "dotenv -e .env.development -- node -e \"require('./src/config/env.js').validateEnv(); console.log('âœ… All validations passed')\"",
    "setup": "npm install && npm run db:generate && npm run db:push && npm run db:seed",
    "reset": "dotenv -e .env.development -- prisma migrate reset && dotenv -e .env.development -- node prisma/seed.js",
    "fresh": "npm run docker:down && npm run docker:up && sleep 5 && npm run setup"
  },
  "keywords": [
    "backend",
    "api",
    "nodejs",
    "express",
    "prisma",
    "postgresql"
  ],
  "author": "Jamil Akhtar",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.6",
    "pg": "^8.16.3",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "chalk": "^5.6.2",
    "dotenv-cli": "^10.0.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.16.2"
  }
}
